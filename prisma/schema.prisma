// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id String @id @default(uuid()) 
  name String
  type String
  transactions Transaction[]
  id_user String
  user  User @relation(fields: [id_user], references: [id])
  @@map("account")
}

model Category {
  id String @id @default(uuid()) 
  name String
  subCategories SubCategory[]
  transactions Transaction[] 
  id_user String
  user  User @relation(fields: [id_user], references: [id])
  @@map("category")
}

model SubCategory {
  id String @id @default(uuid()) 
  name String
  id_category String
  category   Category @relation(fields: [id_category], references: [id])
  @@map("subcategory")
}

model Transaction {
  id String @id @default(uuid())
  description String
  date DateTime
  value Decimal
  id_category String
  category   Category @relation(fields: [id_category], references: [id])
  id_account String
  account   Account @relation(fields: [id_account], references: [id])
  id_user String
  user  User @relation(fields: [id_user], references: [id])
  @@map("transation")
}

model User {
  id String @id @default(uuid())
  name String
  email String
  password String
  categories Category[]
  accounts Account[]
  transactions Transaction[]
  @@map("user")
}
